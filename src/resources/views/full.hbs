<div class="container content-detail">
    <div class="row">
        <div class="colum-4 img-detail">
            <img src="{{films.img}}" alt="" class="img-dt" />
        </div>
        <div class="colum-8 head-name">
            <div class="text-name">
                {{films.name}}
            </div>
            <div class="star">
                <ul class="list-star">
                    <li>
                        <i class="fas fa-star active-star"></i>
                    </li>
                    <li>
                        <i class="fas fa-star active-star"></i>
                    </li>
                    <li>
                        <i class="fas fa-star active-star"></i>
                    </li>
                    <li>
                        <i class="fas fa-star active-star"></i>
                    </li>
                    <li>
                        <i class="fas fa-star active-star"></i>
                    </li>
                </ul>
            </div>
            <div class="tag-film color-text">
                <a href="" style="color: #FEFEFE;">
                    <i class="fas fa-tags" style="color: #C59A22;"></i>
                    {{films.theLoai.Tenloai}}
                </a>
            </div>
            <div class="content-detail-body">
                <ul class="list-content">
                    <li class="item-content">
                        <label for="daoDien">Đạo diễn:</label>
                        {{films.daoDien}}
                    </li>
                    <li class="item-content">
                        <label for="">Thời lượng:</label>
                        {{films.thoiLuong}}
                    </li>
                    <li class="item-content">
                        <label for="">Năm sản xuất:</label>
                        {{films.namSuatBan.year}}
                    </li>
                    <li class="item-content">
                        <label for="">Quốc gia:</label>
                        {{films.quocGia.region}}
                    </li>
                    <li class="item-content">
                        <label for="">Thể loại:</label>
                        {{films.theLoai.Tenloai}}
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="colum-4" style="color: #C59A22;font-size: 1.4rem;">
            Nội Dung
        </div>
        <div class="colum-12">
            <p class="mota">
                {{films.moTa}}
            </p>
        </div>
    </div>
    <div class="row">
        <div class="colum-12">
            <div id="trailer" class="trailer-video">
                <iframe class="ifram-trailer" src="https://www.youtube.com/embed/{{films.full}}"
                    title="YouTube video player" frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="row colum-12">

            <div class="colum-6 text-head">
                <p class="text-item">
                    Có thể bạn muốn xem
                </p>
            </div>
            <div class="row">
                {{#each filmsDC}}
                <div class="colum-s-6 colum-3 card-film">
                    <div class="content-film">
                        <div class="img-content-film">
                            <a href="/films/detail/{{this._id}}">
                                <img src="{{this.img}}" alt="" class="img-film" />
                            </a>
                        </div>
                        <div class="body">
                            <div class="name-film-content">
                                <p class="name-film color-text">
                                    <a href="/films/detail/{{this._id}}" style="color: #FEFEFE;" class="name-text-film">
                                        {{this.name}}
                                    </a>
                                </p>
                            </div>
                            <div class="year color-text">
                                ({{this.namSuatBan.year}})
                            </div>
                            <div class="star">
                                <ul class="list-star">
                                    <li>
                                        <i class="fas fa-star active-star"></i>
                                    </li>
                                    <li>
                                        <i class="fas fa-star active-star"></i>
                                    </li>
                                    <li>
                                        <i class="fas fa-star active-star"></i>
                                    </li>
                                    <li>
                                        <i class="fas fa-star active-star"></i>
                                    </li>
                                    <li>
                                        <i class="fas fa-star active-star"></i>
                                    </li>
                                </ul>
                            </div>
                            <span class="rate-film color-text">
                                Rate :
                                {{this.rate}}
                            </span>
                        </div>
                    </div>
                    <div class="tag-film color-text">
                        <a href="" style="color: #FEFEFE;">
                            <i class="fas fa-tags" style="color: #C59A22;"></i>
                            {{this.theLoai.Tenloai}}
                        </a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>